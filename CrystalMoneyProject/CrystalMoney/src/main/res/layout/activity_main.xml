<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/trxScrollView"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/layoutForScroll"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/accountListImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_account_list"
                android:onClick="onAccountsButtonClick"
                android:drawableLeft="@drawable/credit_cards"
                android:drawablePadding="15sp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/incomeListButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onIncomeButtonClick"
                android:text="@string/title_activity_income_list"
                android:drawableLeft="@drawable/safe_into"
                android:drawablePadding="15sp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/outgoingImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onOutcomeListButtonClick"
                android:drawableLeft="@drawable/safe_out"
                android:text="@string/title_activity_outcome_list"
                android:drawablePadding="15sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exchangeListImageButton"
                android:text="@string/title_activity_exchange_list"
                android:drawableLeft="@drawable/refresh"
                android:onClick="onExchangeButtonClick"
                android:drawablePadding="15sp"
                android:gravity="center_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/statImageButton"
                android:text="@string/title_activity_stat"
                android:drawableLeft="@drawable/chart_pie2"
                android:onClick="onStatButtonClick"
                android:drawablePadding="15sp"
                android:gravity="center_vertical" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>